<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<h1>Book</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: '削除するんか？'}%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%#= link_to “トップページ”, root_path %>
<h2>New Book</h2>
<%= form_with model: @book, local: true do |f| %>
<%= render 'layouts/error_message', model: f.object %>
  <div class="field">
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Body" %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>